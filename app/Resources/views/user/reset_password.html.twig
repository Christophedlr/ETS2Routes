{% extends 'base.html.twig' %}

{% block title %}RÃ©initialisation mot de passe{% endblock %}

{% set breadcrumb = [
    {"name": "Utilisateur", "link": path('user_login')},
    {"name": "Validation", "link": path('user_reset')}
] %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">{{ 'reset.mail'|trans({}, "forms") }}</div>
                <div class="panel-body">
                    <form action="{{ path('user_reset_password') }}" method="post" name="password">
                        <div class="form-group">
                            <label for="mail">{{ 'register.mail'|trans({}, 'forms') }}</label>
                            <input type="email" name="password[mail]" value="" class="form-control" required>
                        </div>
                        <div class="form-group">
                            <label for="code">{{ 'reset.validation'|trans({}, 'forms') }}</label>
                            <input type="text" name="password[code]" value="" class="form-control" required>
                        </div>
                        <button type="submit" class="btn btn-primary">{{ 'reset.submit'|trans({}, 'forms') }}</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
