{% extends 'base.html.twig' %}

{% block title %}Connexion utilisateur{% endblock %}

{% set breadcrumb = [
    {"name": "Utilisateur", "link": ""},
    {"name": "Connexion", "link": path('user_login')}
] %}

{% block body %}
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-primary">
                <div class="panel-heading">
                    Connexion utilisateur
                </div>

                <div class="panel-body">
                    <form action="{{ path('user_login') }}" method="post">
                        <div class="form-group">
                            <label for="login">Nom d'utilisateur</label>
                            <input type="text" name="_username" maxlength="50" id="login" class="form-control">
                        </div>

                        <div class="form-group">
                            <label for="password">Mot de passe</label>
                            <input type="password" name="_password" maxlength="255" id="password" class="form-control">
                        </div>

                        <button class="btn btn-primary" type="submit">Se connecter</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
